{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "build-registry": {
      "dependsOn": ["build"],
      "outputs": ["public/r/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "//#lint:check": {},
    "//#lint": {
      "cache": false
    },
    "type-check": {
      "dependsOn": ["^type-check"]
    },
    "globalEnv": [
      "GITHUB_TOKEN",
      "V0_API_KEY",
      "NEXT_PUBLIC_WANDRY_ANALYTICS_TOKEN"
    ]
  }
}
